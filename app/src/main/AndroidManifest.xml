<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.private_codx.aprivate">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ActivityPrincipal" />
        <activity android:name=".ActivityPerguntas" />
        <activity android:name=".ActivityPesquisa" />
        <activity
            android:name=".Load_Activity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ComentarioActivity" />
        <activity android:name=".RankingActivity" />
        <activity android:name=".CadastroActivity" />
        <activity android:name=".PerfilActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".MinhasPerguntasActivity" />
        <activity android:name=".RecomendadasActivity" />
        <activity android:name=".fragments.cardView_perguntas" />
        <activity android:name=".fragments.recyclerView_perguntas"></activity>
    </application>

</manifest>