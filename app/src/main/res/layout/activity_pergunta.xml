<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perguntar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.private_codx.aprivate.views.PerguntarActivity"
    android:orientation="vertical">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privado"
        android:checked="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/switchPrivado"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edtPerguntar"
        android:layout_alignRight="@+id/edtPerguntar"
        android:layout_alignEnd="@+id/edtPerguntar" />

    <TextView
        android:id="@+id/txtvMensagem"
        android:layout_width="290dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchPrivado"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnEnviar"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="23dp"
        android:id="@+id/btnEnviarPergunta"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="enviarPergunta"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCancelar"
        android:id="@+id/btnCancelarPergunta"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignBaseline="@+id/btnEnviarPergunta"
        android:layout_alignBottom="@+id/btnEnviarPergunta"
        android:layout_alignRight="@id/switchPrivado"
        android:layout_alignEnd="@id/switchPrivado" />

    <EditText
        android:id="@+id/edtPerguntar"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:fontFamily="sans-serif"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
